{% extends 'base.html.twig' %}

{% block title %}Hello SponsorshipController!{% endblock %}

{% block body %}
	{% include 'includes/header.html.twig' %}

    <div class="container internalContainerBig p-0">
        <h1 class="internalTitle">
            Parrainage
        </h1>
        
        {% if app.user %}

        <div class="row internalContainerBig">
            <div class="col-3">
            {% include 'includes/accountmenu.html.twig' %}
            </div>
            <div class="col-9">
                <div {{ react_component('Sponsorship', {user: app.user|serialize(format = 'json')}) }}>
                    Loading...
                    <i class="fas fa-cog fa-spin fa-3x"></i>
                </div>
            </div>
        </div>

            <div class="mb-3">
                You are logged in as
                {{ app.user.userIdentifier }},
                <a href="{{ path('app_logout') }}">Logout</a>
            </div>

            <div class="js-user" data-is-authenticated="{{ app.user ? 'true' : 'false' }}" data-user="{{ app.user|serialize(format = 'json') }}"></div>
        {% endif %}
    </div>
    {% include 'includes/footer.html.twig' %}
{% endblock %}

{% block stylesheets %}
	{{parent()}}
	{{ encore_entry_link_tags('@ads') }}
{% endblock %}

{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('@ads') }}
{% endblock %}
