{% extends 'base.html.twig' %}

{% block title %}Register Controller
{% endblock %}

{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('@auth') }}
{% endblock %}

{% block body %}
	<h1 class="h3 mb-3 font-weight-normal">Please register</h1>

	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form id="register_form" method="POST">
		<div class="form-group">
			<label for="auth_email">Email address</label>
			<input name="auth_email" value="{{ last_username }}" type="email" class="form-control" id="auth_email" aria-describedby="auth_email_help" placeholder="Enter email" autocomplete="username" required autofocus>
		</div>
		<div class="form-group">
			<label for="auth_password">Passwords</label>
			<input name="auth_password" type="password" class="form-control" id="auth_password" aria-describedby="auth_password_help" placeholder="Enter password" autocomplete="current-password" required>
		</div>
		<input type="hidden" id="auth_action" name="auth_action" value="register">
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
{% endblock %}
