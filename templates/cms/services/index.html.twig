{% extends 'base.html.twig' %}

{% block title %}Hello ServicesController!{% endblock %}

{% block body %}
	{% include 'includes/header.html.twig' %}
    <div class="container internalContainerBig p-0">
        <h1 class="internalTitle">
            Les services
        </h1>
    </div>
    <div class="container-fluid p-0 cms-services">
        <div class="container d-flex flex-column align-items-center neighbors-services">
            <img class="img-fluid" src="/img/services-voisins.png" alt="femme avec ordinateur et téléphone géolocalisé" width="855" height="395">
        </div>
    </div>

    <div class="container-fluid p-0">

        <div id="carouselHow" class="container how-it-work carousel slide carousel-slide" data-ride="carousel" data-interval="false" data-bs-ride="carousel">
            <h2 class="text-center"> Comment <br class="d-md-none">ça marche ?</h2>
            <!-- Indicateurs -->
            <ul class="carousel-indicators">
                <button type="button" data-bs-target="#carouselHow" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselHow" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselHow" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </ul>

            <!-- Carrousel -->
            <div class="how-bloc mb-3 text-center carousel-inner">
            <div class="carouselitem1 how carousel-item active" data-bs-interval="5000">
                <div class="how-body">
                    <img src="/img/services-laptop.png" alt="tablette tactile" width="335" height="303" class="img-fluid">
                    <h3 class="m-auto">LES PETITES ANNONCES DANS<br> MON QUARTIER</h3>
                    <a href="#" class="rounded-pill px-3 btn btn-sm bg-orange text-white">Je cherche</a>
                </div>
            </div>
            <div class="carouselitem2 how carousel-item" data-bs-interval="5000">
                <div class="how-body">
                    <img src="/img/services-coucou.png" alt="tablette tactile" width="336" height="303" class="img-fluid">
                    <h3 class="m-auto">LES DEMANDES<br>DE MES VOISINS</h3>
                    <a href="#" class="rounded-pill px-3 btn btn-sm bg-orange text-white">Je consulte</a>
                </div>
            </div>
            <div class="carouselitem3 how carousel-item" data-bs-interval="5000">
                <div class="how-body">
                    <img src="/img/services-cochon.png" alt="bulle et argent" width="326" height="303" class="img-fluid">
                    <h3 class="m-auto">PARRAINE ET GAGNE DE<br>L'ARGENT TOUS LES MOIS</h3>
                    <a href="#" class="rounded-pill px-3 btn btn-sm bg-orange text-white">En savoir +</a>
                </div>
            </div>
            </div>
        
            <!-- Contrôles -->
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselHow" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselHow" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    {% include 'includes/footer.html.twig' %}
{% endblock %}

{% block stylesheets %}
	{{parent()}}
	{{ encore_entry_link_tags('@cms') }}
{% endblock %}

{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('@cms') }}
{% endblock %}
